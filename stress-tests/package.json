{
  "name": "todo-app-stress-tests",
  "version": "1.0.0",
  "description": "Stress tests for Todo application",
  "scripts": {
    "smoke": "k6 run scripts/smoke-test.js",
    "smoke:docker": "ENV=docker k6 run scripts/smoke-test.js",
    "load": "k6 run scripts/stress-test.js",
    "load:docker": "ENV=docker k6 run scripts/stress-test.js --out json=reports/report.json",
    "stress": "k6 run scripts/stress-test.js -e USERS=500 -e DURATION=5m",
    "soak": "k6 run scripts/soak-test.js",
    "spike": "k6 run scripts/spike-test.js",
    "test:all": "npm run smoke && npm run load && npm run soak",
    "report": "node generate-report.js"
  },
  "dependencies": {},
  "devDependencies": {}
}